<div class="container">
    {{#each posts as |post| }}
    <div class="card" style="width: 18rem;">
        <div class="card-header">
            <a href="/posts/{{id}}" class="card-title">{{title}}</a>
            <p>Posted by {{User.username}} on {{format_date createdAt}}</p>
        </div>
        <div class="card-body">
            <p class="card-text">{{content}}</p>
        </div>
    </div>
    {{/each}}
</div>
