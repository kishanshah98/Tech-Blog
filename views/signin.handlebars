<div class="col-md-6">
  <h2>Sign In</h2>

  <form class="form signin-form">
    <div class="form-group">
      <label for="email-signin">Username:</label>
      <input class="form-input" type="text" id="email-signin" />
    </div>
    <div class="form-group">
      <label for="password-signin">Password:</label>
      <input class="form-input" type="password" id="password-signin" />
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit">Submit</button>
    </div>
    <div class="form-group">
      <a href="/signin">Don't have an account? Sign up here.</a>
    </div>
  </form>
</div>
</div>
<script src="./js/signin.js"></script>